generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  coach
  competitor
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role

  competitor Competitor?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Competitor {
  id              String   @id @default(uuid())
  name            String
  avatar          String?
  occupation      String?
  overallAverage  Float    @default(0)
  evaluationCount Int      @default(0)

  user            User     @relation(fields: [userId], references: [id])
  userId          String   @unique

  evaluations     Evaluation[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Task {
  id          String       @id @default(uuid())
  name        String
  description String
  maxTime     Int

  evaluations Evaluation[]

  createdAt   DateTime @default(now())
}

model Evaluation {
  id            String      @id @default(uuid())

  competitor    Competitor  @relation(fields: [competitorId], references: [id])
  competitorId  String

  task          Task        @relation(fields: [taskId], references: [id])
  taskId        String

  date          DateTime
  timeSpent     Int
  feedback      String
  evaluator     String

  createdAt     DateTime @default(now())
}